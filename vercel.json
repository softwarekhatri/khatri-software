{
    "version": 2,
    "builds": [
        {
            "src": "server/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/**",
                    "client/**",
                    "shared/**"
                ]
            }
        },
        {
            "src": "client/src/main.tsx",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/index.html"
        }
    ]
}